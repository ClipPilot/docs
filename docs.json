{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Cuttr API",
  "colors": {
    "primary": "#4F47E6",
    "light": "#6C63FF",
    "dark": "#3D36B9"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/wallet",
              "concepts/rate-limits",
              "concepts/errors"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoint/test",
              "api-reference/endpoint/get-wallet"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://platform.cuttr.com/dashboard/api-platform",
          "icon": "gauge"
        },
        {
          "anchor": "Status",
          "href": "https://status.cuttr.com",
          "icon": "signal"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@cuttr.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://platform.cuttr.com/dashboard/api-platform"
    }
  },
  "api": {
    "baseUrl": "https://api.cuttr.com/api/platform",
    "auth": {
      "method": "key",
      "name": "X-API-Key"
    },
    "playground": {
      "mode": "simple"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/cuttrapp",
      "website": "https://cuttr.com"
    }
  }
}
